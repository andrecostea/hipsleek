data node {
  node next;
  node down;
}.

pred lsegEven<p> == self = p
    or  self::node<r,_> * r::node<t,_> * t::lsegEven<p> & self != p.

checkentail_exact x::lsegEven<y> * y::lsegEven<z> * z::node<_,_>@L |- x::lsegEven<z>.
expect Valid.

checkentail_exact x::lsegEven<y> * y::lsegEven<z> & z=null |- x::lsegEven<z>.
expect Valid.

checkentail_exact x::lsegEven<z> |- x::lsegEven<y> * y::lsegEven<z>.
expect Valid.
