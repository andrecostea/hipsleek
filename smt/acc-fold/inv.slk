data node2 {
     node2 fst;
     node2 snd;
}.


pred P<> == 
  self=null 
  or self::Q<self> & self!=null
  inv true.

pred Q<y> == 
   self::node2<d,c>*d::P<> & y=null & self!=null
   or y::node2<d,c>*self::Q<c> & y!=null
  inv self!=null.
//  inv y=null & self!=null | self!=y & y!=null & self!=null.

pred K<> == 
  self::node2<_,_>
  inv true.

pred ll<n> == self = null & n=0
    or self::node2<_,r> * r::ll<n-1>.

