post1 := {[x] -> [PRIx] -> []:
  (x<=0 && x=PRIx) ||
  exists (x1: (x1=x-1 && post1(x1,PRIx) && 1<=x))
};

bottomupgen([post1], [2], SimHeur);

p0 := {[]: 0=1};
p1 := post1(p0);
p2 := post1(p1);
p3 := post1(p2);
p0;p1;p2;p3;

