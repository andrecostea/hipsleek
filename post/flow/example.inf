post2 := {[x] -> [PRIx] -> []:
  (x<=0 && x=PRIx) ||
  exists (x1: (x1=x-1 && post2(x1,PRIx) && 1<=x && x<=1000))
};

bottomupgen([post2], [2], SimHeur);

pb := {[x] : (1<=x && x<=1000)};
pb;
p0 := {[]: 0=1};
p1 := post2(p0);
p2 := post2(p1);
p3 := post2(p2);
p3h := selhull(p3,2,SimHeur);
p4 := post2(p3h);
p4h := selhull(p4,2,SimHeur);
p4w := widen(p3h,p4h,SimHeur);
p4w1 := widen(p4w,pb,SimHeur);
p0;p1;p2;p3;p3h;p4;p4h;p4w;p4w1;

