/*
 * Counting permissions
 * split: n => -1 & n+1
 */

data node { int val ; node next }.

lemma "splitnode" self::node(f)<v,p> & f>=0 -> self::node(-1)<v,p> * self::node(f+1)<v,p>.

lemma "normalizenode" self::node(-1)<v,p> * self::node(f)<v,p>  & f>=0 ->  self::node(f-1)<v,p>. // correct

