data node {
     node next
}.

pred ll<n> == self = null & n = 0
	or (exists q: self::node<q> * q::ll<n-1> & n > 0).

int length(node x)
  requires x::ll<n>
  ensures x::ll<n> & res = n;.

synthesize [node x]
x::ll<n>&x!=null
~>
 (exists fr59,r14: x::node<r14> * r14::ll<fr59>&
1<=n & n=res & 1+fr59=n).
