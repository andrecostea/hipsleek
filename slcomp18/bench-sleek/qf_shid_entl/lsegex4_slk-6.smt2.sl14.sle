
data Refnode {
	Refnode nxt;
}.

pred lseg<p> ==   emp & self=p
	or  exists a: self::Refnode<a:nxt> * a::lseg<p>
.

pred right1<p> ==  exists u: self::lseg<u> * u::Refnode<p:nxt>
.

pred right2<p> ==  exists u: self::lseg<u> * u::lseg<p>
.

pred right3<p> ==  exists u,u2: self::lseg<u> * u::lseg<u2> * u2::lseg<p>
.

pred right4<> ==  exists u,w: self::lseg<u> * u::lseg<w>
.

pred right5<> ==  exists w: self::lseg<w>
.


checkentail x::lseg<p>
	 |- x::right5<>.
