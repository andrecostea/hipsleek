//Valid.Fail.Fail.Valid.Fail.Fail.
data node { int val ; node next }.

pred lseg<n, p> == case {
     n=0 -> [] self = p & n = 0;
     n!=0 ->  [] self::node<next = r> * r::lseg<n - 1, p>; 
     }
     inv n >= 0.

pred cll<p,n> =  self = p & n = 0
     	or self::node<_, r> * r::cll<p, n-1> & self != p  
        inv n >= 0;


lemma "V1" self::cll<p,n> -> self::lseg<r, n-1> * r::node<_,p>.

