/* singly linked lists */

/* representation of a node */

data node {
	int val; 
	node next;	
}.

/* view for a singly linked list */

pred ll<n> == self = null & n = 0 
	or self::node<_, q> * q::ll<n-1> 
  inv n >= 0 .

pred lst<> == self=null
  or self::node<_,q> * q::lst<>
  inv true .

checkentail x::ll<n> & x!=null |- n>0 .

checkentail x::node<_,_>*y::node<_,_> |- x!=y .

