theorem exists {x} (x = 1 & forall {x} (x * x = 1)).

theorem 0 + x = x.

theorem 1 * x * 1 * 1 * 1 = x.

theorem x - x = 0.

theorem x - x + x = x.

theorem x * y = 1 -> x = 1 | x = -1.

theorem x * y = 0 -> x = 0 | y = 0.

theorem y = x * n & z = y * m -> exists {p} (p = m * n & z = x * p).

theorem y = x * n -> exists {m} (m = n + 1 & y + x = x * m).

theorem y = x * n -> exists {m} (m = -n & -y = x * m).
