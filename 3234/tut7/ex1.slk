data node {
  int val;
  node next;
}.

pred ll<n> == self=null & n=0
  or self::node<v,q>*q::ll<n-1>
  inv n>=0.

pred lsort<s,n> == self::node<s,null> & n=1
  or self::node<s,q>*q::lsort<s2,n-1> & s<=s2 
  inv n>=1.

pred nlsort<s,n> == self=null & n=0
  or self::node<s,q>*q::ll<s2,n-1> & s>s2
  or self::node<s,q>*q::nlsort<s2,n-1> & s<=s2
  inv n>=0.

lemma self::lsort<s,n> -> self::ll<n>.
