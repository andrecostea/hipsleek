
data node {
  int val;
  node next;
}.

pred ll<n> == self=null & n=0
  or self::node<v,q>*q::ll<n-1>
  inv n>=0.

pred pll<n> == self::node<s,null> & n=1 & s>0
  or self::node<s,q>*q::pll<n-1> & s>0
  inv n>=1.

